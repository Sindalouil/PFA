{% extends 'baseuser.html.twig' %}

{% block title %}hello AdmindashController!
{% endblock %}

{% block body %}


	<div class="main-panel">
		<div class="content">
			<div class="page-inner">
				<div class="page-header">

					<div class="btn-group btn-group-page-header ml-auto">
						<div class="dropdown-menu">
							<div class="arrow"></div>
							<a class="dropdown-item" href="#">Action</a>
							<a class="dropdown-item" href="#">Another action</a>
							<a class="dropdown-item" href="#">Something else here</a>
							<div class="dropdown-divider"></div>
							<a class="dropdown-item" href="#">Separated link</a>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-md-6">
						<div class="card">
							<div class="card-header">
								<div class="card-title">Mes demandes
								</div>
							</div>
							<div class="card-body pb-0">
								{% for demande in demandes %}
								<div class="separator-dashed"></div>
								<div class="d-flex">
									<div class="avatar">
										 <div class="number" > {{demande.id}} </div>
									</div>
									<div class="flex-1 pt-3 ml-2">
										<small class="text-muted">
											{{demande.nom}}
										</small>
									</div>

								</div>
								 {% else %}
										<p>no records found</p>
								{% endfor %}

								<div class="separator-dashed"></div>
								<div class="pull-in">
									<div class="chartjs-size-monitor" style="position: absolute; inset: 0px; overflow: hidden; pointer-events: none; visibility: hidden; z-index: -1;">
										<div class="chartjs-size-monitor-expand" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;">
											<div style="position:absolute;width:1000000px;height:1000000px;left:0;top:0"></div>
										</div>
										<div class="chartjs-size-monitor-shrink" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;">
											<div style="position:absolute;width:200%;height:200%;left:0; top:0"></div>
										</div>
									</div>
									<canvas id="topProductsChart" width="328" height="150" style="display: block; width: 328px; height: 150px;" class="chartjs-render-monitor"></canvas>
								</div>
							</div>
						</div>
					</div>
					<div class="col-md-6">
						<div class="card">
							<div class="card-header">
								<div class="card-title">Mon materiel
								</div>
							</div>
							<ol class="activity-feed">
								<li class="feed-item feed-item-secondary">

									<span class="text">Materiel 1</span>
								</li>
								<li class="feed-item feed-item-success">

									<span class="text">Materiel2</span>
								</li>
								<li class="feed-item feed-item-info">

									<span class="text">Materiel3</span>
								</li>

								<li class="feed-item feed-item-danger">

									<span class="text">Materiel4</span>
								</li>

							</ol>
						</div>
					</div>
				</div>


			</div>
		</div>

	</div>

</div></div>{% endblock %}
